<?xml version="1.0" encoding="utf-8"?>
<com.vkontakte.miracle.engine.view.PostTextView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/post_text_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="12dp">

    <com.vkontakte.miracle.engine.view.textView.MiracleTextView
        android:id="@+id/post_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:highlightColor="?attr/colorPrimary"
        app:enableClicking="true"
        tools:text="#атпадпиека #sus" />
    <TextView
        android:id="@+id/post_more_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_more"
        android:textColor="?attr/colorPrimary"
        android:visibility="gone"
        tools:visibility="visible" />
</com.vkontakte.miracle.engine.view.PostTextView>