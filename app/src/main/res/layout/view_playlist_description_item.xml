<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginHorizontal="12dp"
    android:layout_marginBottom="6dp"
    android:padding="@dimen/parent_padding"
    android:background="@drawable/rounded_card_child_container_secondary">

    <com.vkontakte.miracle.engine.view.textView.MiracleTextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textSize="15sp"
        android:textColor="?attr/colorSecondary"
        android:includeFontPadding="false"
        android:autoLink="web"
        app:highlightColor="?attr/colorPrimary"
        app:enableClicking="true"
        tools:text="Описание https://vk.com"/>
</FrameLayout>