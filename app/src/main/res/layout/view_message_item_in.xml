<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="9dp"
        android:layout_marginBottom="9dp"
        android:orientation="horizontal"
        android:gravity="start|bottom">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="9dp"
            android:paddingTop="9dp"
            android:orientation="vertical"
            android:background="@drawable/message_item_in_bg">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:paddingHorizontal="3dp"
                android:includeFontPadding="false"
                android:textSize="16sp" />

            <ViewStub
                android:id="@+id/photosViewStub"
                android:inflatedId="@+id/photosView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="9dp"
                android:layout="@layout/view_message_item_photos_stub"/>

            <ViewStub
                android:id="@+id/audiosViewStub"
                android:inflatedId="@+id/audiosView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout="@layout/view_message_item_audios_in_stub"/>

        </LinearLayout>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_weight="0"
            android:textColor="?attr/colorContrast50"
            tools:text="0:00" />
    </LinearLayout>
</FrameLayout>
