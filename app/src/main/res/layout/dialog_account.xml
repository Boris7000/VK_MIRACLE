<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="19dp"
        android:background="@drawable/rounded_card"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_card_child_container_primary_disabled"
            android:orientation="horizontal"
            android:padding="16dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/photo"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical"
                android:background="?attr/colorSurface"
                android:padding="2dp"
                app:shapeAppearanceOverlay="@style/CircleShapeAppearance"
                app:strokeColor="?attr/colorOnPrimaryContainerDisabled"
                app:strokeWidth="2dp" />

            <Space
                android:layout_width="12dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="marquee"
                android:fontFamily="sans-serif-medium"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textColor="?attr/colorOnPrimaryContainerDisabled"
                android:textSize="16sp"
                tools:text="Name" />

        </LinearLayout>

        <com.miracle.button.TextViewButton
            android:id="@+id/deleteButton"
            style="@style/TextButton.PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:text="@string/delete" />

        <com.miracle.button.TextViewButton
            android:id="@+id/cancelButton"
            style="@style/TextButton.SecondaryButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/cancel" />
    </LinearLayout>

</FrameLayout>