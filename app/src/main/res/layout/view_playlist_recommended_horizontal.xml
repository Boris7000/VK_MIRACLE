<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="286dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4.5dp"
    android:orientation="vertical"
    android:background="@drawable/rounded_card_outline">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="12dp">

        <TextView
            android:id="@+id/percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/product_bold"
            android:singleLine="true"
            android:textSize="17sp"
            tools:text="50%" />
        <TextView
            android:id="@+id/percentageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="1dp"
            android:includeFontPadding="false"
            android:ellipsize="end"
            android:singleLine="true"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:textColor="?attr/colorOnSecondaryContainerDisabled"
            android:textSize="14sp"
            tools:text="percentageTitle" />
    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:fontFamily="@font/product_bold"
        android:textSize="18sp"
        tools:text="Title" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="5dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:textColor="?attr/colorOnSecondaryContainerDisabled"
        android:textSize="14sp"
        tools:text="Subtitle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividerWidth"
        android:layout_marginVertical="6dp"
        android:background="?attr/colorDivider"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        tools:itemCount="3"
        tools:listitem="@layout/view_audio_item_triple_stacked"/>

</LinearLayout>