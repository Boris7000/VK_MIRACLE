<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.miracle.button.TextViewButton
        android:id="@+id/editButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:text="@string/message"
        style="@style/TextButton.PrimaryButton"/>

    <Space
        android:layout_width="12dp"
        android:layout_height="0dp"/>

    <com.miracle.button.Button
        android:id="@+id/addButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:enabled="false"
        android:src="@drawable/ic_add_28"
        app:background_color="?attr/colorSecondary"
        app:disabled_background_color="?attr/colorSecondaryContainer"
        app:disabled_icon_color="?attr/colorOnSecondaryContainer"
        app:icon_color="?attr/colorOnSecondary"
        app:shapeAppearanceOverlay="@style/ChildShapeAppearance" />

    <Space
        android:layout_width="12dp"
        android:layout_height="0dp"/>

    <com.miracle.button.TextViewButton
        android:id="@+id/optionsButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:icon_start="@drawable/ic_more_vertical_28"
        style="@style/TextButton.SecondaryButton"/>

</LinearLayout>
