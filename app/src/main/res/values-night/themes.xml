<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NightBaseTheme" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!--/////////////////////////////////////////////////////////////-->
        <item name="colorError">@color/error_60</item>
        <item name="colorOnError">@color/neutral_10</item>
        <item name="colorErrorContainer">@color/error_secondary_20</item>
        <item name="colorOnErrorContainer">@color/error_70</item>
        <!--/////////////////////////////////////////////////////////////-->
        <item name="android:colorBackground">@color/neutral_10</item>
        <item name="android:windowBackground">@color/neutral_10</item>
        <item name="colorOnBackground">@color/white</item>
        <!--/////////////////////////////////////////////////////////////-->
        <item name="colorSurface">@color/neutral_10</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/neutral_10</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="colorCardBackground">@color/neutral_15</item>
        <item name="colorButtonOnCardBackground">@color/neutral_20</item>
        <item name="colorOnButtonOnCardBackground">@color/neutral_70</item>
        <!--/////////////////////////////////////////////////////////////-->
        <item name="colorPrimary">?attr/colorPrimary_60</item>
        <item name="colorOnPrimary">@color/neutral_10</item>
        <item name="colorSecondary">?attr/colorSecondary_60</item>
        <item name="colorOnSecondary">@color/neutral_10</item>
        <!--/////////////////////////////////////////////////////////////-->
        <item name="colorPrimaryDisabled">@color/neutral_60</item>
        <item name="colorOnPrimaryDisabled">@color/neutral_10</item>
        <item name="colorSecondaryDisabled">@color/neutral_60</item>
        <item name="colorOnSecondaryDisabled">@color/neutral_10</item>
        <!--/////////////////////////////////////////////////////////////-->
        <item name="colorPrimaryContainer">?attr/colorPrimary_20</item>
        <item name="colorOnPrimaryContainer">?attr/colorPrimary_80</item>
        <item name="colorSecondaryContainer">?attr/colorSecondary_20</item>
        <item name="colorOnSecondaryContainer">?attr/colorSecondary_80</item>
        <!--/////////////////////////////////////////////////////////////-->
        <item name="colorPrimaryContainerDisabled">@color/neutral_20</item>
        <item name="colorOnPrimaryContainerDisabled">@color/neutral_80</item>
        <item name="colorSecondaryContainerDisabled">@color/neutral_20</item>
        <item name="colorOnSecondaryContainerDisabled">@color/neutral_80</item>
        <!--/////////////////////////////////////////////////////////////-->
        <item name="colorEmphasis_90">@color/white</item>
        <item name="colorEmphasis_70">@color/neutral_70</item>
        <item name="colorEmphasis_65">@color/neutral_60</item>
        <item name="colorEmphasis_60">@color/neutral_50</item>
        <item name="colorEmphasis_50">@color/neutral_30</item>
        <item name="colorEmphasis_40">@color/neutral_25</item>
        <!--/////////////////////////////////////////////////////////////-->
        <item name="colorMessageInContainer">@color/neutral_20</item>
        <item name="colorOnMessageIn">@color/white</item>
        <item name="colorMessageInPlaceholder">@color/neutral_25</item>
        <item name="colorMessageInStroke">@color/neutral_30</item>
        <item name="colorMessageInLink">?attr/colorPrimary</item>
        <item name="colorMessageOutContainer">?attr/colorPrimary_50</item>
        <item name="colorOnMessageOut">@color/white</item>
        <item name="colorMessageOutPlaceholder">?attr/colorPrimary_60</item>
        <item name="colorMessageOutStroke">?attr/colorPrimary_70</item>
        <item name="colorMessageOutLink">?attr/colorPrimary_90</item>
        <!--/////////////////////////////////////////////////////////////-->
        <item name="colorPlaceholder">@color/neutral_20</item>
        <item name="colorStroke">@color/neutral_25</item>
        <item name="colorDivider">@color/neutral_20</item>
        <item name="colorOutline">@color/neutral_30</item>
        <!--/////////////////////////////////////////////////////////////-->
        <item name="colorSearchTextBackground">@color/neutral_20</item>
        <item name="colorSearchTextHint">@color/neutral_60</item>
        <!--/////////////////////////////////////////////////////////////-->
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="scrollBarColor">@color/white_half_20</item>
        <item name="swipeRefreshCircleColor">@color/neutral_15</item>
        <item name="android:textColor">?attr/colorEmphasis_90</item>
        <item name="android:colorButtonNormal">?attr/colorPrimary</item>
        <item name="colorSwitchThumbNormal">@color/darkControlNormal</item>
        <item name="colorControlActivated">?android:attr/colorButtonNormal</item>
        <item name="globalTranslationZ">@dimen/translationZNight</item>
        <item name="android:spotShadowAlpha">0.08</item>
        <item name="android:ambientShadowAlpha">0.12</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
    </style>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="NightBaseTheme"/>

    <style name="CyberpunkTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/johny_500</item>
        <item name="colorPrimary_80">@color/johny_600</item>
        <item name="colorPrimary_60">@color/johny_700</item>
        <item name="colorPrimary_40">@color/johny_800</item>
        <item name="colorPrimary_20">@color/johny_900</item>
        <item name="colorSecondary">@color/yellow_500</item>
        <item name="colorSecondary_80">@color/yellow_600</item>
        <item name="colorSecondary_60">@color/yellow_700</item>
        <item name="colorSecondary_40">@color/yellow_800</item>
        <item name="colorSecondary_20">@color/yellow_900</item>
    </style>

    <style name="SunsetTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorPrimary_80">@color/pink_600</item>
        <item name="colorPrimary_60">@color/pink_700</item>
        <item name="colorPrimary_40">@color/pink_800</item>
        <item name="colorPrimary_20">@color/pink_900</item>
        <item name="colorSecondary">@color/skyBlue_10</item>
        <item name="colorSecondary_80">@color/skyBlue_10</item>
        <item name="colorSecondary_60">@color/skyBlue_10</item>
        <item name="colorSecondary_40">@color/skyBlue_10</item>
        <item name="colorSecondary_20">@color/skyBlue_10</item>
    </style>


    <style name="FijiTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/fiji_500</item>
        <item name="colorPrimary_80">@color/fiji_600</item>
        <item name="colorPrimary_60">@color/fiji_700</item>
        <item name="colorPrimary_40">@color/fiji_800</item>
        <item name="colorPrimary_20">@color/fiji_900</item>
        <item name="colorSecondary">@color/pink_500</item>
        <item name="colorSecondary_80">@color/pink_600</item>
        <item name="colorSecondary_60">@color/pink_700</item>
        <item name="colorSecondary_40">@color/pink_800</item>
        <item name="colorSecondary_20">@color/pink_900</item>
    </style>

    <style name="SailorTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/cyprus_500</item>
        <item name="colorPrimary_80">@color/cyprus_600</item>
        <item name="colorPrimary_60">@color/cyprus_700</item>
        <item name="colorPrimary_40">@color/cyprus_800</item>
        <item name="colorPrimary_20">@color/cyprus_900</item>
        <item name="colorSecondary">@color/crush_500</item>
        <item name="colorSecondary_80">@color/crush_600</item>
        <item name="colorSecondary_60">@color/crush_700</item>
        <item name="colorSecondary_40">@color/crush_800</item>
        <item name="colorSecondary_20">@color/crush_900</item>
    </style>

    <style name="ContrastTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/contrast_500</item>
        <item name="colorPrimary_80">@color/contrast_600</item>
        <item name="colorPrimary_60">@color/contrast_700</item>
        <item name="colorPrimary_40">@color/contrast_800</item>
        <item name="colorPrimary_20">@color/contrast_900</item>
    </style>

    <style name="AppThemeStart" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="29">true</item>
        <item name="android:windowBackground">@drawable/splash_screen_night</item>
        <item name="android:navigationBarColor">?android:attr/colorBackground</item>
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:colorBackground">@color/darkBack</item>
    </style>

</resources>