<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="LightBaseTheme" parent="Engine.LightBaseTheme">
        <!--/////////////////////////////////////////////////////////////-->
        <item name="colorMessageInContainer">@color/neutral_95</item>
        <item name="colorOnMessageIn">@color/neutral_10</item>
        <item name="colorMessageInPlaceholder">@color/neutral_90</item>
        <item name="colorMessageInStroke">@color/neutral_80</item>
        <item name="colorMessageInLink">?attr/colorPrimary</item>
        <item name="colorMessageOutContainer">?attr/colorPrimary_50</item>
        <item name="colorOnMessageOut">@color/white</item>
        <item name="colorMessageOutPlaceholder">?attr/colorPrimary_60</item>
        <item name="colorMessageOutStroke">?attr/colorPrimary_70</item>
        <item name="colorMessageOutLink">?attr/colorPrimary_90</item>
        <!--/////////////////////////////////////////////////////////////-->
        <item name="colorLikeButton">@color/likeContainerLight</item>
        <item name="colorOnLikeButton">@color/like</item>
    </style>

    <style name="AppThemeStart" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="29">true</item>
        <item name="android:windowBackground">@drawable/splash_screen_day</item>
        <item name="android:colorBackground">@color/skyBlue_50</item>
        <item name="android:navigationBarColor">?android:attr/colorBackground</item>
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
    </style>

    <style name="PhotoViewerTheme" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimary_80">@color/white_600</item>
        <item name="colorPrimary_60">@color/white_700</item>
        <item name="colorPrimary_40">@color/white_800</item>
        <item name="colorPrimary_20">@color/white_900</item>

        <item name="android:textColor">@color/white</item>


        <item name="colorPlaceholder">@color/neutral_20</item>


        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">?attr/colorOnPrimary</item>

        <item name="colorAccent">?attr/colorPrimary</item>

        <item name="colorSecondary">?attr/colorPrimary</item>
        <item name="colorSecondary_80">?attr/colorPrimary_80</item>
        <item name="colorSecondary_60">?attr/colorPrimary_60</item>
        <item name="colorSecondary_40">?attr/colorPrimary_40</item>
        <item name="colorSecondary_20">?attr/colorPrimary_20</item>

    </style>

</resources>