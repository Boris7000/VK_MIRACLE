<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.AppBar" parent="Widget.Design.AppBarLayout">
        <item name="android:fitsSystemWindows">true</item>
        <item name="liftOnScroll">false</item>
        <item name="elevation">0dp</item>
        <item name="statusBarForeground">?android:attr/windowBackground</item>
        <item name="android:background">@drawable/app_bar_bg</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="29">@android:color/black</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="29">@android:color/black</item>
        <item name="actionBarSize">?attr/actionBarSize</item>
    </style>

    <style name="Widget.AppBar.SurfaceVariant">
        <item name="statusBarForeground">?attr/colorBackgroundDark</item>
        <item name="android:background">@drawable/app_bar_bg_surface_variant</item>
    </style>

    <style name="Widget.AppBar.TranslucentStatusBar">
        <item name="statusBarForeground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.CollapsingToolbar" parent="Widget.Design.CollapsingToolbar">
        <item name="android:fitsSystemWindows">true</item>
        <item name="contentScrim">?android:attr/colorBackground</item>
        <item name="statusBarScrim">?android:attr/colorBackground</item>
        <item name="android:background">@drawable/app_bar_bg</item>
    </style>

    <style name="Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolBarTitleTextAppearance</item>
    </style>

    <style name="Widget.Toolbar.TopAppBarWithBackButton">
        <item name="navigationIcon">@drawable/ic_back_28</item>
    </style>

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?attr/colorPrimary</item>
    </style>

    <style name="Widget.AppCompat.ActionButton.Overflow.Tinted" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">?attr/colorPrimary</item>
    </style>

    <style name="Widget.AppCompat.ActionButton.Tinted" parent="Widget.AppCompat.ActionButton">
        <item name="tint">?attr/colorPrimary</item>
    </style>

    <style name="NavigationBarView">
        <item name="itemIconSize">28dp</item>
        <item name="itemIconTint">@color/nav_bar_icon_colors</item>
        <item name="itemTextColor">@color/nav_bar_text_colors</item>
        <item name="itemRippleColor">?attr/colorSecondaryContainer</item>
        <item name="itemActiveIndicatorStyle">@style/NavigationBarView.Indicator</item>
    </style>

    <style name="NavigationBarView.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?attr/colorSecondaryContainer</item>
    </style>

</resources>